{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "dist/index.js",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "https://buzzer-rose.vercel.app"
      }
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.js",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "https://buzzer-rose.vercel.app"
      }
    }
  ]
}
